    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
        }

        /* Container for the entire content */
        .container {
            margin-top: 50px;
        }

        nav {
  background: white;
  height: 80px;
  width: 100%;
  z-index: 20; /* Ensure navbar is above other content */
  position: fixed; /* Ensure navbar remains fixed */
  top: 0;
  left: 0;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow for depth */
}

/* Logo styling */
label.logo {
  color: maroon; /* Change color to maroon */
  font-size: 25px;
  line-height: 80px;
  padding: 0 100px;
  font-weight: bold;
}
.logo-image{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
   margin-top:10px;
   margin-left:30px
}

/* Navigation list */
nav ul {
  float: right;
  margin-right: 20px;
}

/* List items */
nav ul li {
  display: inline-block;
  line-height: 80px;
  margin: 0 5px;
}

/* Links */
nav ul li a {
  color: maroon; /* Change color to maroon */
  font-size: 17px;
  padding: 7px 13px;
  border-radius: 3px;
  text-transform: uppercase;
  text-decoration:none
}

a.active,
a:hover {
  background: maroon; /* Change hover color */
  color: white; /* Change text color on hover */
  transition: .5s;
  
}

/* Buttons for login and signup */
.button a {
  background: white; /* Maroon background for buttons */
  color: maroon; /* White text color for buttons */
  border:1px solid maroon;
  padding: 10px 20px;
  border-radius: 3px;
  text-transform: uppercase;
  transition: background-color .5s;
}

.button a:hover {
  background: white; /* White background on hover */
  color: maroon; /* Maroon text on hover */
  border: 2px solid maroon;
}

/* Checkbox for responsive menu */
.checkbtn {
  font-size: 22px;
  color: maroon; /* Change color to maroon */
  float: right;
  line-height: 80px;
  margin-right: 30px;
  cursor: pointer;
  display: none;
}

#check {
  display: none;
}

@media (max-width: 1050px) {
  label.logo {
    padding-left: 30px;
  }

  nav ul li a {
    font-size: 16px;
  }
}

/* Responsive media query code for small screen */
@media (max-width: 890px) {
  .checkbtn {
    display: block;
  }
  
  label.logo {
    font-size: 22px;
  }

  ul {
    position: fixed;
    width: 100%;
    height: 100vh;
    background: white; /* Ensure background matches main navbar */
    top: 80px;
    left: -100%;
    text-align: center;
    transition: all .5s;
  }

  nav ul li {
    display: block;
    margin: 50px 0;
    line-height: 30px;
  }

  nav ul li a {
    font-size: 20px;
    color: maroon; /* Ensure color remains maroon */
  }

  a:hover,
  a.active {
    background: maroon; /* Change active background to maroon */
    color: white; /* Change active text to white */
  }

  #check:checked ~ ul {
    left: 0;
  }
}


/* Hero Section */

section {
  background-size: cover;
  height: calc(100vh - 80px);
  position: relative;
  background-image: url('Public/Images/Uploaded_Images/picsss/IMG-20241008-WA0028.jpg');
  background-size: cover;
  background-position: center;
  text-align: center;
  color: white;
  padding-top: 120px; /* Add space for the navbar */
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('Public/Images/Uploaded_Images/picsss/sp (2).jpg') no-repeat center center;
  background-size: cover;
  z-index: 1; /* Keep hero section behind navbar */
}

        .hero-content {
            position: relative;
            z-index: 10;
        }

        .hero-content h1 {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.7);
        }

        .hero-content p {
            font-size: 1.5rem;
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.8;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }

        /* Call-to-action button in hero */
        .cta-btn {
            background-color: maroon;
            color: white;
            padding: 12px 25px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .cta-btn:hover {
            background-color: white;
            color: maroon;
            border: 2px solid maroon;
            transform: scale(1.05);
        }

        /* Intro Section */
        .intro {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            margin-top: 40px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            font-size: 1.1rem;
        }

        .intro h2 {
            color: maroon;
            font-size: 2.5rem;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .intro p {
            line-height: 1.8;
        }

        /* Styling for contact cards */
        .contact-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin: 10px;
            padding: 20px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .contact-card img {
            width: 50%; /* Increased width for better alignment */
            margin-bottom: 15px;
        }

        .contact-card h5 {
            font-size: 18px;
            font-weight: 600;
            color: #333;
        }

        .contact-card p {
            font-size: 16px;
            color: #555;
        }

        /* Form container styling */
        .form-container {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container h3 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        textarea {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
        }

        input[type="submit"] {
            background-color: #800000;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: white;
            color:maroon;
            border:1px solid maroon
        }

        /* Google Map iframe styling */
        iframe {
            border-radius: 8px;
            width: 100%;
            max-width: 600px;
            height: 400px;
        }

        /* Adjust the layout for smaller screens */
        @media (max-width: 768px) {
            .contact-card {
                width: 100%;
                margin-bottom: 20px;
            }

            .form-container {
                margin-top: 30px;
            }
        }
