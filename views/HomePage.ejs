/* Navbar styling */
/* Navbar styling */
nav {
  background: white;
  height: 80px;
  width: 100%;
  z-index: 20; /* Ensure navbar is above other content */
  position: fixed; /* Ensure navbar remains fixed */
  top: 0;
  left: 0;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow for depth */
}

/* Logo styling */

.logo-image{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
   margin-top:10px;
   margin-left:30px
}

/* Navigation list */
nav ul {
  float: right;
  margin-right: 20px;
}

/* List items */
nav ul li {
  display: inline-block;
  line-height: 80px;
  margin: 0 5px;
}

/* Links */
nav ul li a {
  color: maroon; /* Change color to maroon */
  font-size: 17px;
  padding: 7px 13px;
  border-radius: 3px;
  text-transform: uppercase;
  text-decoration:none
}

a.active,
a:hover {
  background: maroon; /* Change hover color */
  color: white; /* Change text color on hover */
  transition: .5s;
  
}

/* Buttons for login and signup */
.button a {
    background: white; /* Maroon background for buttons */
  color: maroon; /* White text color for buttons */
  border:1px solid maroon;
  padding: 10px 20px;
  border-radius: 3px;
  text-transform: uppercase;
  transition: background-color .5s;
}

.button a:hover {
  background: white; /* White background on hover */
  color: maroon; /* Maroon text on hover */
  border: 2px solid maroon;
}

/* Checkbox for responsive menu */
.checkbtn {
  font-size: 22px;
  color: maroon; /* Change color to maroon */
  float: right;
  line-height: 80px;
  margin-right: 30px;
  cursor: pointer;
  display: none;
}

#check {
  display: none;
}

@media (max-width: 1050px) {
  label.logo {
    padding-left: 30px;
  }

  nav ul li a {
    font-size: 16px;
  }
}

/* Responsive media query code for small screen */
@media (max-width: 890px) {
  .checkbtn {
    display: block;
  }
  
  label.logo {
    font-size: 22px;
  }

  ul {
    position: fixed;
    width: 100%;
    height: 100vh;
    background: white; /* Ensure background matches main navbar */
    top: 80px;
    left: -100%;
    text-align: center;
    transition: all .5s;
  }

  nav ul li {
    display: block;
    margin: 50px 0;
    line-height: 30px;
  }

  nav ul li a {
    font-size: 20px;
    color: maroon; /* Ensure color remains maroon */
  }

  a:hover,
  a.active {
    background: maroon; /* Change active background to maroon */
    color: white; /* Change active text to white */
  }

  #check:checked ~ ul {
    left: 0;
  }
}


