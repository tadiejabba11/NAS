</head>
<body>
    <div class="container-fluid">
        <nav>
            <!-- Checkbox for toggling menu -->
            <input type="checkbox" id="check">
            <!-- Menu icon -->
            <label for="check" class="checkbtn">
              <i class="fas fa-bars"></i>
            </label>
            <!-- Site logo -->
            <a class="navbar-brand" href="/">
                <div class="logo-image">
                      <img src="Public/Images/Uploaded_Images/picsss/IMG-20241008-WA0028.jpg" alt="NUST Adventist Society Logo"" class="img-fluid">
                </div>
          </a>
            <!-- Navigation links -->
            <ul>
              <li><a  href="/">Home</a></li>
              <li><a class="active" href="/Exec">About</a></li>
              <li><a href="/Gallery">Gallery</a></li>
              <li><a href="/Contact_Us">Contact</a></li>
              <li class="button"><a href="/Login">Log In</a></li>
              <li class="button"><a href="/SignUp">Sign Up</a></li>
            </ul>
          </nav>
          <section>
            <div class="hero-section">
         
            
                <div class="hero-content">
                    <h1>NUST Adventist Society</h1>
                    <p>A community of faith, service, and fellowship—your home away from home.</p>
                    
                </div>
                
                
            </div>
        
          </section>
      
        <!-- Missions Section -->
        <div class="Missions">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <img src="Public/Images/Uploaded_Images/picsss/Aimm.png" class="card-img-top" alt="Aim">
                        <div class="card-body">
                            <h5 class="card-title">Aim</h5>
                            <p class="card-text">To spread the Advent message to all the world in this generation.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <img src="Public/Images/Uploaded_Images/picsss/Visionn.png" class="card-img-top" alt="Vision">
                        <div class="card-body">
                            <h5 class="card-title">Vision</h5>
                            <p class="card-text">NUST and the world ripe for the harvest of the gospel.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <img src="Public/Images/Uploaded_Images/picsss/Misionn.png" class="card-img-top" alt="Mission">
                        <div class="card-body">
                            <h5 class="card-title">Mission</h5>
                            <p class="card-text">To proclaim the everlasting gospel of our Lord and Saviour Jesus Christ, as embodied in the three angels’ messages of Revelation 14:6-12 to members of the university and the world at large.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Executive Section -->
        <div class="Exec">
            <div class="row">
              
                <form action="/Exec" method="GET" class="filter-form">
                    <div class="form-group">
                        <label for="Business_Name" class="form-label">Filter By Year</label>
                        <select name="Year" id="Business_Name" class="form-control input-field">
                            <option value="" selected disabled>Select Year</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                        </select>
                    </div>
                
                    <div class="form-group">
                        <input type="submit" value="Find" class="submit-btn">
                    </div>
                </form>
                
                <h2 class="center">The Executive Committee</h2>

               
                
                <% if (Executive.length > 0) { %>
                    <% for (let i = 0; i < 1; i++) { %>
                        <div class="col-lg-6">
                            <div class="card">
                                <img src="<%= Executive[i].Image %>" class="card-img-top" alt="<%= Executive[i].Name %>">
                                <div class="card-body">
                                    <h3 class="card-title"><%= Executive[i].Name %></h3>
                                    <h4 class="card-title text-muted"><%= Executive[i].Position %></h4>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div><br>
            <div class="row">
                <% if (Executive.length > 0) { %>
                    <% for (let i = 1; i < 4; i++) { %>
                        <div class="col-lg-4">
                            <div class="card">
                                <img src="<%= Executive[i].Image %>" class="card-img-top" alt="<%= Executive[i].Name %>">
                                <div class="card-body">
                                    <h3 class="card-title"><%= Executive[i].Name %></h3>
                                    <h4 class="card-title text-muted"><%= Executive[i].Position %></h4>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div><br>
            <div class="row">
                <% if (Executive.length > 0) { %>
                    <% for (let i = 4; i < (Executive.length); i++) { %>
                        <div class="col-lg-3">
                            <div class="card">
                                <img src="<%= Executive[i].Image %>" class="card-img-top" alt="<%= Executive[i].Name %>">
                                <div class="card-body">
                                    <h3 class="card-title"><%= Executive[i].Name %></h3>
                                    <h4 class="card-title text-muted"><%= Executive[i].Position %></h4>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div><br>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
